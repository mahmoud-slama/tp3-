@model IEnumerable<TP3.Models.Cinema.Producer>

@{
    ViewData["Title"] = "Index";
}

<h1>Producers</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                   
                <a asp-action="Edit"  class="text-decoration-none" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="text-decoration-none text-info " asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="text-decoration-none text-danger " asp-route-id="@item.Id">Delete</a>
 
            </td>
            <td>
                <a asp-action="MyMovies" class="text-decoration-none  text-success " asp-route-id="@item.Id">My Movies</a>

            </td>
        </tr>
        }
        <a asp-controller="Movies" asp-action="MoviesAndTheirProds" class="text-decoration-none"> PRODS AND THEIR MOVIES</a>

    </tbody>
</table>
