@model IEnumerable<TP3.Models.Cinema.Movie>

@{
    ViewData["Title"] = "MoviesAndtheirProds";
}

<h1>Movies And their Producers</h1>

<p>
    <a asp-action="Index">Go Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer.Nationality)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
           <td>
            @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Producer.Nationality)
            </td>
            
         
        </tr>
}
    </tbody>
</table>
